<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Add a new course</h1> <br /><br />
  <%= simple_form_for @course, url: instructor_courses_path do |f| %>
    <%= f.input :title %><br /><br />
    <%= f.input :description %><br /><br />
    <%= f.input :cost %>
    <br />
    <%= f.submit "Create", class: 'btn btn-primary btn-lg' %>
    <br />
  <% end %>
  <br />
</div>